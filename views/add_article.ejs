<% include header %>
<div class="container">
    <h4><%= title %></h4>
    <br>
    <form action="/articles/add" method="post">
      <div class="row">
        <div class="input-field col s12 ">
          <input id="title" type="text" class="validate" name="title" required>
          <label for="title">Title</label>
        </div>
      </div>
     
      <div class="row">
        <div class="input-field col s12">
          <textarea id="body" class="materialize-textarea" name="body" required></textarea>
          <label for="body">Body</label>
        </div>
      </div>
      <div class="row">
        <input class="waves-effect waves-light btn light-blue darken-2" type="submit">
      </div>
    </form>
  </div>
<% include footer %>